@model IEnumerable<HappyPaws.Models.Toys>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            var itemName = (item.Name + ".png");
            itemName = itemName.Replace(" ", "");
            <div class="col-md-3">
                <div  style="padding: 4%; margin-bottom: 7%; margin-top: 7%; text-align: center; border: 1px solid grey;">
                    <a><img height="200px" width="200px" src="~/Content/Images/@itemName" /></a>
                    <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                    <p>
                        @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = item.Id }, null) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })

                    </p>
                    <p>
                    </p>
                </div>
            </div>
        }
    }
</div>
